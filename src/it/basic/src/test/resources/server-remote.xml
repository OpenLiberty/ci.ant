<server description="production server">

    <!-- Enable features -->
    <featureManager>
        <feature>servlet-3.0</feature>
        <feature>jpa-2.1</feature>
        <feature>restConnector-1.0</feature>
        <feature>ssl-1.0</feature>
        <feature>jsp-2.2</feature>
        <feature>localConnector-1.0</feature>
    </featureManager>

    <httpEndpoint host="localhost" httpPort="8081" httpsPort="8444" id="defaultHttpEndpoint"/>


    <applicationMonitor updateTrigger="mbean"/>
    <keyStore id="defaultKeyStore" password="testStore"/>
    <quickStartSecurity userName="testUser" userPassword="testUser"/>
    <remoteFileAccess>
        <writeDir>${server.config.dir}/dropins</writeDir>
    </remoteFileAccess>
</server>